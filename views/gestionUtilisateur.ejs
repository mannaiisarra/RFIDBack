
<%- include('parts/header')%> 

<div id="layoutSidenav_content">
    <script>
        function ConfirmDelete()
        {
          var x = confirm("Are you sure you want to delete?");
          if (x)
              return true;
          else
            return false;
        }
        </script>
    <main>
<div class="container-fluid">
