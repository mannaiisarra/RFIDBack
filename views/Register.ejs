<%- include('parts/header'); -%> 
<div id="layoutSidenav_content">
    <main>
     <div class="container-fluid">
        <div class="col-md-12">
           <br></br>
            <% if (typeof message != 'undefined' && message) { %>
                <div class="alert alert-success"><%- message %></div>
                <% } else if(typeof errorMsg  != 'undefined' && errorMsg ) { %>
                        <div class="alert alert-danger"><%- errorMsg  %></div>
                        <% } %>
           
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <form action="/registre" method="post" >

              <div class="card-header"><h3 class="text-center font-weight-light ">Ajouter Employ√©es</h3></div>
             
              <form>
              
                   
                    <div class="form-group">
                        <label class="small mb-1" for="inputEmailAddress">username</label>
                        <input class="form-control py-4" id="inputEmailAddress" type="username" aria-describedby="emailHelp" placeholder="Enter email address" />
                    </div>
                
                <div class="form-group">
                    <label class="small mb-1" for="inputEmailAddress">Email</label>
                    <input class="form-control py-4" id="inputEmailAddress" type="email" aria-describedby="emailHelp" placeholder="Enter email address" />
                </div>
                <div class="form-row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="small mb-1" for="inputPassword">Password</label>
                            <input class="form-control py-4" id="inputPassword" type="password" placeholder="Enter password" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="small mb-1" for="inputConfirmPassword">Confirm Password</label>
                            <input class="form-control py-4" id="inputConfirmPassword" type="password" placeholder="Confirm password" />
                        </div>
                    </div>
                </div>
                <div class="form-group mt-4 mb-0"><a class="btn btn-primary btn-block" href="">Create Account</a></div>
            </form>
       </div> 
    </div>
       
          
                                  
               
      
       
